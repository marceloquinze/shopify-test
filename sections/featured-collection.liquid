<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
			{% for product in section.settings.featured_collection.products limit: section.settings.products_per_page %}
				{% render 'product-card', product_var: product %}
			{% else %}
				{% for item in (1..4) %}
					{% render 'product-card-placeholder' %}
				{% endfor %}
			{% endfor %}
        </div>
    </div>
</div>
{% schema %}
	{
		"name": "Featured Collection",
		"settings": [
			{
				"type": "text",
				"id": "title",
				"label": "Title",
				"default": "Featured Collection"
			},
			{
				"type": "collection",
				"id": "featured_collection",
				"label": "Collection"
			},
			{
				"type": "range",
				"id": "products_per_page",
				"label": "Products per page",
				"default": 4,
				"min": 1,
				"max": 16
			}
		],
		"presets": [
			{
				"name": "Featured Collection"
				// will allow you to add additional collections to the template
			}
		]
	}
{% endschema %}